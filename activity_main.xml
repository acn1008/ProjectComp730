<?xml version="1.0" encoding="utf-8"?>
<!-- Linear Layout chosen to design application-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background ="#800080"
    android:backgroundTintMode="add"
    android:orientation="vertical"
    android:id="@+id/background_layer"
    tools:context=".MainActivity">

    <!-- static image-doesn't change in application -->
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginHorizontal="65dp"
        android:contentDescription="@string/temperature"
        android:src="@drawable/temperature"
        tools:ignore="ImageContrastCheck" />

    <!-- project title and authors -->
    <TextView
        android:id="@+id/authors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/temperature_converter_by_andre_nasrah_ellie_brown"
        android:textAlignment="center"
        android:textColor="#FAFAFA"
        android:textStyle="bold"
        android:textSize="15sp" />

    <!-- This is where the temperature to be converted is entered -->
    <EditText
        android:id="@+id/input_edt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="@string/enter_temperature"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColorHint="#FFF9C4"
        android:textSize="22sp" />

    <!-- This is the drop down menu which has been implemented to choose either Celsius to Fahrenheit or Fahrenheit to Celsius -->
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:textSize="45sp"
        android:spinnerMode="dropdown"
        android:layout_gravity="center"
        android:text="Choose a Conversion"/>

    <!--Button to calculate conversion output-->
    <Button
        android:id="@+id/go_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate Conversion"
        android:textAlignment="center"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="-10dp"
        android:textAllCaps="false"/>

    <TextView
        android:id="@+id/output_tv"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="50dp"
        android:text="@string/degrees"
        android:textAlignment="center"
        android:textColor="#F06292"
        android:textStyle="bold"
        android:textSize="22sp" />

    <!-- Freezing button used as a label to mark progress bar readings -->
    <Button
        android:id="@+id/freezing"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textAllCaps="false"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="-53dp"
        android:text="@string/freezing" />

    <!-- Boiling button used as a label to mark progress bar readings -->
    <Button
        android:id="@+id/boiling"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textAllCaps="false"
        android:textAlignment="center"
        android:textSize="25sp"
        android:text="@string/boiling"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="-73dp"/>

    <!-- Progress bar used as a marker to determine on a scale from
    0 pct (frezing) to 100 pct (boiling) after conversion pulling from
     drawable/custom_progress_bg-->

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:attr/progressBarStyleHorizontal"
        android:progressDrawable="@drawable/custom_progress_bg"/>



     <!-- Disclaimer stating when celisius is converted to fahrenheit freezing is 32
     degrees while boiling is 212 degrees -->
    <TextView
        android:id="@+id/disclaimer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/when_celsius_is_converted_to_fahrenheit_freezing_is_32_degrees_while_boilng_is_212_degrees"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#FAFAFA"
        android:background="#666666"
        android:textSize="15sp" />

    <!-- Disclaimer stating when fahrenheit is converted to celsius freezing is 0
     degrees while boiling is 100 degrees -->
    <TextView
        android:id="@+id/disclaimer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/when_fahrenheit_is_converted_to_celsius_freezing_is_0_degrees_while_boilng_is_100_degrees"
        android:textAlignment="center"
        android:textColor="#FAFAFA"
        android:textStyle="bold"
        android:background="#666666"
        android:textSize="15sp" />

    <!-- Disclaimer explaining background color blue for freezing, red for boiling and
     green for everything else. Purple is standard background-->
    <TextView
        android:id="@+id/disclaimer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/freezing_temps_blue_backround_boiling_temps_red_background_all_other_temps_green_background"
        android:textAlignment="center"
        android:textColor="#FAFAFA"
        android:textStyle="bold"
        android:background="#666666"
        android:textSize="15sp" />
</LinearLayout>